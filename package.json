{
  "name": "express-esm-mvc",
  "version": "4.1.0",
  "description": "Node.js Express MVC boilerplate with ESM support.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf public/build",
    "webpack": "npm run clean && webpack --progress",
    "build": "cross-env NODE_ENV=production npm run webpack",
    "start": "cross-env NODE_ENV=production node main.js",
    "dev": "cross-env NODE_ENV=development npm run webpack",
    "lint:code": "eslint . --fix",
    "lint:style": "stylelint **/*.{css,scss,sass} --fix --allow-empty-input",
    "lint": "npm-run-all lint:code lint:style",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "test:watch": "npm test -- --watch",
    "test:coverage": "rimraf tests/coverage && npm test -- --coverage",
    "prepare": "husky"
  },
  "engines": {
    "npm": ">=10.8.2",
    "node": ">=20.17.0"
  },
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not IE 10"
  ],
  "keywords": [
    "nodejs",
    "express",
    "mvc",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/express-mvc-esm.git"
  },
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "imports": {
    "#config": "./app/config.js",
    "#controllers/*": "./app/controllers/*.js",
    "#helpers/*": "./app/helpers/*.js",
    "#middleware/*": "./app/middleware/*.js",
    "#models/*": "./app/models/*.js",
    "#routers/*": "./app/routers/*.js",
    "#build/*": "./public/build/*.js"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.1.0",
    "cross-env": "^7.0.3",
    "csrf-csrf": "^3.0.6",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "eta": "^3.5.0",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "serve-favicon": "^2.5.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/eslint-parser": "^7.25.1",
    "@babel/plugin-transform-strict-mode": "^7.24.7",
    "@babel/preset-env": "^7.25.4",
    "@eslint/js": "^9.9.1",
    "assets-webpack-plugin": "^7.1.1",
    "autoprefixer": "^10.4.20",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "core-js": "^3.38.1",
    "css-loader": "^7.1.2",
    "css-minimizer-webpack-plugin": "^7.0.0",
    "eslint": "^9.9.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.5",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "mini-css-extract-plugin": "^2.9.1",
    "nodemon-webpack-plugin": "^4.8.2",
    "postcss": "^8.4.44",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.3",
    "sass": "^1.77.8",
    "sass-loader": "^16.0.1",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4",
    "webpack-remove-empty-scripts": "^1.0.4"
  }
}
