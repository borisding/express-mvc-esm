{
  "name": "express-esm-mvc",
  "version": "1.0.0",
  "description": "Node.js Express MVC boilerplate with ESM support",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "cross-env NODE_ENV=production node -r dotenv/config index.js",
    "dev": "cross-env NODE_ENV=development nodemon -r dotenv/config index.js",
    "lint:js": "eslint . --fix",
    "lint:scss": "stylelint **/*.scss --fix --allow-empty-input",
    "lint": "npm-run-all lint:scss lint:js",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "express",
    "mvc",
    "boilerplate"
  ],
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "eta": "^1.12.3",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "serve-favicon": "^2.5.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "stylelint": "^13.13.1",
    "stylelint-scss": "^3.19.0",
    "webpack": "^5.44.0",
    "webpack-cli": "^4.7.2"
  }
}
