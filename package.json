{
  "name": "express-esm-mvc",
  "version": "2.0.0",
  "description": "Node.js Express MVC boilerplate with ESM support.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "clean": "rimraf public/build",
    "webpack": "npm run clean && webpack --progress",
    "build": "cross-env NODE_ENV=production npm run webpack",
    "start": "cross-env NODE_ENV=production node index.js",
    "dev": "cross-env NODE_ENV=development npm run webpack",
    "lint:js": "eslint . --fix",
    "lint:scss": "stylelint **/*.{scss,sass} --fix --allow-empty-input",
    "lint": "npm-run-all lint:scss lint:js",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "test:watch": "npm test -- --watch",
    "test:coverage": "rimraf tests/coverage && npm test -- --coverage",
    "prepare": "husky install"
  },
  "engines": {
    "npm": ">=6.14.8",
    "node": ">=14.15.1"
  },
  "sideEffects": [
    "*.css",
    "*.scss",
    "*.sass"
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not IE 10"
  ],
  "keywords": [
    "nodejs",
    "express",
    "mvc",
    "boilerplate"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/borisding/express-mvc-esm.git"
  },
  "author": "Boris Ding Poh Hing",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "dotenv": "^16.0.0",
    "dotenv-expand": "^8.0.2",
    "eta": "^1.12.3",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "morgan": "^1.10.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "serve-favicon": "^2.5.0",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-transform-strict-mode": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "assets-webpack-plugin": "^7.1.1",
    "autoprefixer": "^10.4.4",
    "babel-jest": "^27.5.1",
    "babel-loader": "^8.2.3",
    "core-js": "^3.21.1",
    "css-loader": "^6.7.1",
    "css-minimizer-webpack-plugin": "^3.4.1",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon-webpack-plugin": "^4.7.1",
    "postcss": "^8.4.12",
    "postcss-loader": "^6.2.1",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.6.0",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "stylelint": "^14.6.0",
    "stylelint-config-sass-guidelines": "^9.0.1",
    "stylelint-scss": "^4.2.0",
    "terser-webpack-plugin": "^5.3.1",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  }
}
